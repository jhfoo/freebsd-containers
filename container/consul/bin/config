
PORT_EXT=8550

if [ "$MODE" = "prod" ]; then
    PORT_EXT=8500
fi

# derived variables (should not change)
PORT_INT=8500
DATA_DIR_EXT=(${DATA_DIR_EXT_BASE}/${APP_NAME}/${MODE})
DATA_DIR_INT=/app/data

PORTMAP=("-p" "${PORT_EXT}:${PORT_INT}/tcp")
VOLMAP=("-v" "${DATA_DIR_EXT[1]}:$DATA_DIR_INT")

#echo "${VOLMAP[@]}"
